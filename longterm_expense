  <script>
    function handleSubmit() {
      const income = Number(document.getElementById("income").value) || 0;
      const expense = Number(document.getElementById("expense").value) || 0;
      const debt = Number(document.getElementById("debt").value) || 0;
      const insurance = Number(document.getElementById("insurance").value) || 0;
      const investment = Number(document.getElementById("investment").value) || 0;

      const total = expense + debt + insurance + investment;
      const surplus = income - total;
      const saving_rate = income > 0 ? (surplus / income) * 100 : 0;

      let grade = "";
      if (saving_rate >= 30) grade = "A";
      else if (saving_rate >= 10) grade = "B";
      else grade = "C";

      // å¡«å…¥éš±è—æ¬„ä½
      document.getElementById("total").value = total;
      document.getElementById("surplus").value = surplus;
      document.getElementById("saving_rate").value = saving_rate.toFixed(1) + "%";
      document.getElementById("grade").value = grade;

      // é¡¯ç¤ºåˆ†æçµæœ
      document.getElementById("result").style.display = "block";
      document.getElementById("result_total").innerText = `ğŸ’¸ ç¸½æ”¯å‡ºï¼š${total.toLocaleString()} å…ƒ`;
      document.getElementById("result_surplus").innerText = `ğŸ“Š çµé¤˜ï¼š${surplus.toLocaleString()} å…ƒ`;
      document.getElementById("result_rate").innerText = `ğŸ“ˆ å„²è“„ç‡ï¼š${saving_rate.toFixed(1)}%`;
      document.getElementById("result_grade").innerText = `ğŸ“£ è©•ç´šï¼š${grade}`;

      return true; // è®“è¡¨å–®ç¹¼çºŒé€å‡º
    }
